<h1 class="mb-4">Create New Profile</h1>

<form action="/profiles" method="POST">
  <div class="mb-3">
    <label class="form-label">Name:</label>
    <input class="form-control" type="text" name="name" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Height (cm):</label>
    <input class="form-control" type="number" name="height" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Weight (kg):</label>
    <input class="form-control" type="number" name="weight" required>
  </div>
  <button class="btn btn-primary" type="submit">Create Profile</button>
</form>

<a class="btn btn-outline-secondary mt-3" href="/profiles">Back to Profiles</a>
